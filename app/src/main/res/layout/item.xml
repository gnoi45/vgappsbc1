<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/sender_chat_balloon"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_right"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bc_logo"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/video_right"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/emoji_1f3a5"
            android:visibility="gone"/>
        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/msg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Hi Gokul"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_regular"/>
        <TextView
            android:id="@+id/time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="10:13 AM"
            android:textSize="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:textColor="#E4E3E3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:id="@+id/left"
        android:visibility="gone"
        android:layout_margin="5dp"

        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:background="@drawable/receiver_chat_balloon"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_left"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bc_logo"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/video_left"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/emoji_1f3a5"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/msg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Hi"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_regular"/>
        <TextView
            android:id="@+id/time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginRight="5dp"
            android:text="10:13 AM"
            android:textSize="10dp"
            android:layout_gravity="left"
            android:textColor="#E4E3E3"/>
    </LinearLayout>
</LinearLayout>
